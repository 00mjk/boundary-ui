<div class="{{this.className}} {{if @error " error"}} {{if @inline "inline"}}">
 <span class='radio-wrapper'>
  <RadioButton
    ...attributes
    @radioClass="rose-form-radio-field"
    @radioId={{this.id}}
    type="radio"
    disabled={{@disabled}}
    @name={{@name}}
    @value={{@value}}
    @groupValue={{@selectedValue}}
    @disabled={{@disabled}}
    @changed={{@changed}} />
  </span>
  <label class="rose-form-radio-label" for={{this.id}}>

    {{#if @icon}}
      <Rose::Icon
        @name={{@icon}}
        @size="medium"
      />
    {{/if}}

    {{@label}}

  </label>

  {{yield}}

</div>
