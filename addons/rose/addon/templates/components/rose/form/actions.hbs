<div class="rose-form-actions" ...attributes>
  <Rose::Button
    @disabled={{@disabled}}
    @submit={{true}}
    @style="primary"
  >
    {{@submitText}}
  </Rose::Button>

  {{#if this.showCancel}}
    <Rose::Button
      @disabled={{@disabled}}
      @style="secondary"
      {{on "click" @cancel}}
    >
      {{@cancelText}}
    </Rose::Button>
  {{/if}}
</div>
