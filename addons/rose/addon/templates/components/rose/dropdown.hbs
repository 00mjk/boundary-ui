<details
  ...attributes
  class="rose-dropdown {{if @alignRight " rose-dropdown-right"}}"
  {{on-click-outside this.close}}
>

  <summary
    class="rose-dropdown-trigger{{if @iconOnly " has-icon-only"}}"
    title={{@text}}
  >

    {{#if @icon}}
      <Rose::Icon
        @name={{@icon}}
        @size="medium"
      />
    {{/if}}

    <span class="rose-dropdown-trigger-text">
      {{@text}}
    </span>

  </summary>

  <div class="rose-dropdown-content" {{on-click-inside this.close}}>
    {{yield (hash
      link=(component "link-to" class="rose-dropdown-link")
      button=(component "rose/button" classNames="rose-dropdown-button" style=this.style)
    )}}
  </div>

</details>
