{{#if @model}}
  <LinkTo
    ...attributes
    @route={{if @route @route "index"}}
    @model={{@model}}
    class="rose-link-button {{if  @style (concat "rose-button-" @style)}} {{if @iconLeft "has-icon-left"}} {{if @iconRight "has-icon-right"}} {{if @iconOnly "has-icon-only"}}"
    >
    <Rose::LinkButton::Body @iconOnly={{@iconOnly}} @iconLeft={{@iconLeft}} @iconRight={{@iconRight}}>
      {{yield}}
    </Rose::LinkButton::Body>
  </LinkTo>
{{else}}
  <LinkTo
    ...attributes
    @route={{if @route @route "index"}}
    class="rose-link-button {{if  @style (concat "rose-button-" @style)}} {{if @iconLeft "has-icon-left"}} {{if @iconRight "has-icon-right"}} {{if @iconOnly "has-icon-only"}}"
    >
    <Rose::LinkButton::Body @iconOnly={{@iconOnly}} @iconLeft={{@iconLeft}} @iconRight={{@iconRight}}>
      {{yield}}
    </Rose::LinkButton::Body>
  </LinkTo>
{{/if}}
