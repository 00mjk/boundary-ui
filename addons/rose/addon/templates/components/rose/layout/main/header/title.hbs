<div ...attributes
  class="rose-layout-main-header-title"
>
  {{#if (has-block)}}
    {{yield (hash
      dropdown=(component 'rose/header/dropdown' style='dark')
    )}}
  {{else}}
    <section class="rose-layout-main-header-title-section">
      {{#if @icon}}
        <span class="rose-layout-main-header-title-icon">{{inline-svg @icon}}</span>
      {{/if}}

      {{#if @text}}
        <h1 class="rose-layout-main-header-title-text">{{@text}}</h1>
      {{/if}}
    </section>
  {{/if}}
</div>
