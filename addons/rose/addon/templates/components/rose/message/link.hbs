{{#if @leftAlign}}
  <LinkTo title={{@title}} @route={{@route}} @model={{@model}}
    class='rose-message-link rose-message-link-left-align'
  >
    {{yield}}
  </LinkTo>
{{else}}
  <LinkTo title={{@title}} @route={{@route}} @model={{@model}}
    class='rose-message-link rose-message-link-right-align'
  >
    {{yield}}
  </LinkTo>
{{/if}}
