{
  "private": true,
  "description": "Monorepo for Project Watchtower UIs and addons.",
  "license": "MPL-2.0",
  "author": "HashiCorp",
  "workspaces": [
    "addons/*",
    "ui/*"
  ],
  "scripts": {
    "lint": "yarn lint:addons:rose",
    "lint:addons:rose": "echo \"\n\nlint: addons/rose\n\" && cd addons/rose && yarn lint",
    "test": "yarn test:addons:rose",
    "test:addons:rose": "echo \"\n\ntest: addons/rose\n\" && cd addons/rose && yarn test",
    "precommit": "yarn compliance:licenses && yarn audit && yarn lint && yarn test",
    "commit": "git-cz",
    "compliance:licenses": "license-checker --onlyAllow 'Apache License, Version 2.0;Apache-2.0;BSD;BSD-3-Clause;CC-BY-3.0;CC-BY-4.0;CC0-1.0;ISC;MIT;MPL-2.0;Public Domain;Unicode-TOU;Unlicense;WTFPL' --excludePackages 'watchtower-ui;base64-js@0.0.2'",
    "doc:toc": "doctoc README.md"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.1.0",
    "doctoc": "^1.4.0",
    "git-cz": "^4.3.1",
    "license-checker": "^25.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
