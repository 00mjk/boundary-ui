<Rose::Form
  @onSubmit={{@submit}}
  @cancel={{@cancel}}
  @disabled={{@model.isSaving}}
  @error={{@model.errors.base}}
  @showEditToggle={{if @model.isNew false true}}
  as |form|
>
  <form.input
    @name='name'
    @type='name'
    @value={{@model.name}}
    @label={{t 'form.name.label'}}
    @helperText={{t 'form.name.help'}}
    @error={{@model.errors.name}}
    disabled={{@model.isSaving}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.name}}
      <field.errors as |errors|>
        {{#each @model.errors.name as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <form.textarea
    @name='description'
    @type='description'
    @value={{@model.description}}
    @label={{t 'form.description.label'}}
    @helperText={{t 'form.description.help'}}
    @error={{@model.errors.description}}
    disabled={{@model.isSaving}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.description}}
      <field.errors as |errors|>
        {{#each @model.errors.description as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.textarea>

  {{#if @model.isNew}}
    <form.fieldset>
      <:title>{{t 'form.type.label'}}</:title>
      <:body>
        <form.radioGroup
          @name='azure_plugin'
          @selectedValue={{@model.type}}
          @changed={{@changeType}}
          as |radioGroup|
        >
          <radioGroup.card
            @label={{t 'resources.host-catalog.types.static'}}
            @value='static'
            @helperText={{t 'resources.host-catalog.form.types.static.help'}}
            @layout='wide'
          />
          <radioGroup.card
            @label={{t 'resources.host-catalog.types.dynamic'}}
            @value='plugin'
            @helperText={{t 'resources.host-catalog.form.types.dynamic.help'}}
            @layout='wide'
          />
        </form.radioGroup>
      </:body>
    </form.fieldset>
    <Rose::Separator />
    <form.fieldset>
      <:title>{{t 'resources.host-catalog.form.provider-details'}}</:title>
      <:body>
        <form.radioGroup
          @name='aws_plugin'
          @selectedValue={{@model.compositeType}}
          @changed={{@changeType}}
          as |radioGroup|
        >
          <radioGroup.card
            @label={{t 'resources.host-catalog.types.aws'}}
            @value='aws'
            @layout='tile'
            @icon='flight-icons/svg/aws-color-16'
          />
          <radioGroup.card
            @label={{t 'resources.host-catalog.types.azure'}}
            @value='azure'
            @layout='tile'
            @icon='flight-icons/svg/azure-color-16'
          />
        </form.radioGroup>
      </:body>
    </form.fieldset>
  {{else}}
    <form.fieldset>
      <:title>{{t 'resources.host-catalog.form.provider-details'}}</:title>
      <:body>
        <form.radioGroup
          @name='azure_plugin'
          @selectedValue={{@model.compositeType}}
          @disabled={{true}}
          as |radioGroup|
        >
          <radioGroup.card
            @label={{t 'resources.host-catalog.types.azure'}}
            @value='azure'
            @layout='tile'
            @icon='flight-icons/svg/azure-color-16'
          />
        </form.radioGroup>
      </:body>
    </form.fieldset>
  {{/if}}

  <form.input
    @name='tenant_id'
    @type='tenant_id'
    @value={{@model.tenant_id}}
    @label={{t 'form.tenant_id.label'}}
    readonly={{false}}
  />

  {{#if (can 'save model' @model)}}
    <form.actions
      @disabled={{if @model.cannotSave @model.cannotSave}}
      @enableEditText={{t 'actions.edit-form'}}
      @submitText={{t 'actions.save'}}
      @cancelText={{t 'actions.cancel'}}
    />
  {{/if}}

</Rose::Form>