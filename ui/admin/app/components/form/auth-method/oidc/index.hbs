<Rose::Form
  @onSubmit={{@submit}}
  @cancel={{@cancel}}
  @disabled={{@model.isSaving}}
  @error={{@model.errors.base}}
  @showEditToggle={{if @model.isNew false true}}
  as |form|
>
  <form.input
    @value={{@model.type}}
    @label={{t 'form.type.label'}}
    readonly={{true}}
    @disabled={{true}}
  />

  <form.input
    @name='name'
    @type='text'
    @value={{@model.name}}
    @label={{t 'form.name.label'}}
    @helperText={{t 'form.name.help'}}
    @error={{@model.errors.name}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.name}}
      <field.errors as |errors|>
        {{#each @model.errors.name as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <form.textarea
    @name='description'
    @type='text'
    @value={{@model.description}}
    @label={{t 'form.description.label'}}
    @helperText={{t 'form.description.help'}}
    @error={{@model.errors.description}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.description}}
      <field.errors as |errors|>
        {{#each @model.errors.description as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.textarea>

  <form.input
    @name='issuer'
    @type='text'
    @value={{@model.attributes.issuer}}
    @label={{t 'form.issuer.label'}}
    @helperText={{t 'form.issuer.help'}}
    @error={{@model.errors.attributes.issuer}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.attributes.issuer}}
      <field.errors as |errors|>
        {{#each @model.errors.attributes.issuer as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <form.checkbox
    @label={{t 'form.disable_discovered_config_validation.label'}}
    @helperText={{t 'form.disable_discovered_config_validation.help'}}
    @checked={{@model.attributes.disable_discovered_config_validation}}
    onChange={{fn
      (mut @model.attributes.disable_discovered_config_validation)
      (if @model.attributes.disable_discovered_config_validation false true)
    }}
  />

  <form.input
    @name='client_id'
    @type='text'
    @value={{@model.attributes.client_id}}
    @label={{t 'form.client_id.label'}}
    @helperText={{t 'form.client_id.help'}}
    @error={{@model.errors.attributes.client_id}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.attributes.client_id}}
      <field.errors as |errors|>
        {{#each @model.errors.attributes.client_id as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <form.input
    @name='client_secret'
    @type='password'
    @value={{@model.attributes.client_secret}}
    @label={{t 'form.client_secret.label'}}
    @helperText={{t 'form.client_secret.help'}}
    @error={{@model.errors.attributes.client_secret}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.attributes.client_secret}}
      <field.errors as |errors|>
        {{#each @model.errors.attributes.client_secret as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  {{! Signing Algorithms }}
  <Rose::Form::Fieldset>
    <:title>{{t 'form.signing_algorithms.label'}}</:title>
    <:description>{{t 'form.signing_algorithms.help'}}</:description>
    <:body>
      <Rose::Table @style='condensed' as |table|>
        <table.header as |header|>
          <header.row @hidden={{true}} as |row|>
            <row.headerCell>{{t 'titles.value'}}</row.headerCell>
            <row.headerCell>{{t 'titles.actions'}}</row.headerCell>
          </header.row>
        </table.header>
        <table.body as |body|>
          {{#each @model.attributes.signing_algorithms as |algorithm i|}}
            <body.row as |row|>
              <row.cell>
                <form.select
                  @value={{algorithm.value}}
                  @error={{@model.errors.attributes.signing_algorithms}}
                  @contextual={{true}}
                  @onChange={{fn (mut algorithm.value)}}
                  as |field|
                >
                  <field.label>{{t 'form.algorithm.label'}}</field.label>
                  <field.field as |select|>
                    {{#each this.signingAlgorithms as |algorithm|}}
                      <select.option
                        @value={{algorithm}}
                      >{{algorithm}}</select.option>
                    {{/each}}
                  </field.field>
                  {{#if @model.errors.attributes.signing_algorithms}}
                    <field.errors as |errors|>
                      {{#each
                        @model.errors.attributes.signing_algorithms
                        as |error|
                      }}
                        <errors.message>{{error.message}}</errors.message>
                      {{/each}}
                    </field.errors>
                  {{/if}}
                </form.select>
              </row.cell>
              <row.cell @shrink={{true}}>
                <Rose::Button
                  @style='warning'
                  @iconOnly='trash'
                  title={{t 'actions.remove'}}
                  @disabled={{if form.isEditable false true}}
                  {{on
                    'click'
                    (fn @removeItemByIndex 'attributes.signing_algorithms' i)
                  }}
                >
                  {{t 'actions.remove'}}
                </Rose::Button>
              </row.cell>
            </body.row>
          {{/each}}
        </table.body>
      </Rose::Table>
    </:body>
  </Rose::Form::Fieldset>

