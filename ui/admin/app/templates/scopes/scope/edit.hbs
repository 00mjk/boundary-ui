<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <BreadCrumbs />
  </page.breadcrumbs>

  <page.header>
    {{#if @model.isOrg}}
      <h2>
        {{t "resources.org.title"}}
        <DocLink @doc="org" @iconSize="large" />
      </h2>
      <p>{{t "resources.org.description"}}</p>
    {{/if}}
    {{#if @model.isProject}}
      <h2>
        {{t "resources.project.title"}}
        <DocLink @doc="project" @iconSize="large" />
      </h2>
      <p>{{t "resources.project.description"}}</p>
    {{/if}}
    <Copyable
      @text={{@model.id}}
      @buttonText={{t "actions.copy-to-clipboard"}}
      @acknowledgeText={{t "states.copied"}}
    >
      <code>{{@model.id}}</code>
    </Copyable>
  </page.header>

  <page.navigation>
    <Rose::Nav::Tabs as |nav|>
      <nav.link @route='scopes.scope'>
        {{t 'titles.details'}}
      </nav.link>
    </Rose::Nav::Tabs>
  </page.navigation>

  <page.actions>
    <Rose::Dropdown @text="{{t 'actions.manage'}}" @dropdownRight={{true}} as |dropdown|>
      <dropdown.button
        @style="danger"
        @disabled={{@model.canSave}}
        {{on "click" (route-action "delete" @model)}}
      >
        {{#if @model.isOrg}}
          {{t 'resources.org.actions.delete'}}
        {{else}}
          {{t 'resources.project.actions.delete'}}
        {{/if}}
      </dropdown.button>
    </Rose::Dropdown>
  </page.actions>

  <page.body>
    <Form::Scope
      @model={{@model}}
      @submit={{route-action "save" @model}}
      @cancel={{route-action "cancel" @model}}
    />
  </page.body>

</Rose::Layout::Page>
