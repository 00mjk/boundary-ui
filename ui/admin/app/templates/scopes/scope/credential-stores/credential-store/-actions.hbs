<Rose::Dropdown
  @text={{t 'actions.manage'}}
  @dropdownRight={{true}}
  as |dropdown|
>
  {{#if (can 'create collection' @model collection='credential-libraries')}}

    <dropdown.link
      @route='scopes.scope.credential-stores.credential-store.credential-libraries.new'
      @model={{@model}}
    >
      {{t 'resources.credential-library.actions.create'}}
    </dropdown.link>
  {{/if}}
  {{#if (can 'delete model' @model)}}
    <dropdown.separator />
    <dropdown.button
      @style='danger'
      @disabled={{@model.canSave}}
      {{on 'click' (route-action 'delete' @model)}}
    >
      {{t 'resources.credential-store.actions.delete'}}
    </dropdown.button>
  {{/if}}
</Rose::Dropdown>