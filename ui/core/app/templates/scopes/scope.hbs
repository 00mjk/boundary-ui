<Rose::Layout::Sidebar as |sidebarLayout|>

  {{#if this.session.isAuthenticated}}
    <sidebarLayout.sidebar>

      {{#if @model.isGlobal}}
        <Rose::Nav::Sidebar @title={{t "titles.general"}} as |nav|>
          <nav.link @route="scopes.scope.orgs">
            <Rose::Icon
              @name="app-icons/org"
              @size="medium" />
            {{t "resources.org.title_plural"}}
          </nav.link>
        </Rose::Nav::Sidebar>
      {{/if}}

      {{#if @model.isOrg}}
        <Rose::Nav::Sidebar @title={{t "titles.general"}} as |nav|>
          <nav.link @route="scopes.scope.projects">
            <Rose::Icon
              @name="app-icons/project"
              @size="medium" />
            {{t "resources.project.title_plural"}}
          </nav.link>
        </Rose::Nav::Sidebar>
      {{/if}}

      {{outlet "sidebar"}}

    </sidebarLayout.sidebar>
  {{/if}}

  <sidebarLayout.body>
    <main>
      {{outlet}}
    </main>
  </sidebarLayout.body>

</Rose::Layout::Sidebar>
