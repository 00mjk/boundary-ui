<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <BreadCrumbs />
  </page.breadcrumbs>

  <page.header>
    <h2>
      {{t "resources.org.title_plural"}}
      <DocLink @doc="org" @iconSize="large" />
    </h2>
    {{#if @model}}
      <p>{{t "resources.org.description"}}</p>
    {{/if}}
  </page.header>

  <page.actions>
    {{#if @model}}
      <Rose::LinkButton
        @route="scopes.scope.orgs.new"
        @style="primary"
      >
        {{t 'titles.new'}}
      </Rose::LinkButton>
    {{/if}}
  </page.actions>

  <page.body>

    {{#if @model}}

      <Rose::Cards as |cards|>
        {{#each @model as |org|}}
          <cards.link
            @title={{org.name}}
            @description={{org.description}}
            @id={{org.id}}
            @icon="boundary-icons/org"
            @route="scopes.scope"
            @model={{org.id}}
          />
        {{/each}}
      </Rose::Cards>

    {{else}}

      <Rose::Layout::Centered>
        <Rose::Message @title={{t 'resources.org.messages.welcome.title'}} as |message|>
          <message.description>
            {{t 'resources.org.description'}}
          </message.description>
          <message.link @route="scopes.scope.orgs.new">
            <Rose::Icon @name="plus-circle-outline" />
            {{t 'titles.new'}}
          </message.link>
        </Rose::Message>
      </Rose::Layout::Centered>

    {{/if}}

  </page.body>

</Rose::Layout::Page>
