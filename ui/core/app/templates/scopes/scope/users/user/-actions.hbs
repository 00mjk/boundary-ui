<Rose::Dropdown @text="{{t 'actions.manage'}}" @dropdownRight={{true}} as |dropdown|>
  <dropdown.link @route="scopes.scope.users.user.add-accounts">
    {{t "resources.user.actions.add-accounts"}}
  </dropdown.link>
  <dropdown.button
    @style="danger"
    @disabled={{@model.canSave}}
    {{on "click" (route-action "delete" @model)}}
  >
    {{t 'actions.delete-user'}}
  </dropdown.button>
</Rose::Dropdown>
