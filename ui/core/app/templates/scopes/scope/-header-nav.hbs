<Rose::Dropdown
  @text={{this.model.displayName}}
  @icon="app-icons/org" as |dropdown|
>
  {{#if this.session.data.authenticated.isGlobal}}
    <dropdown.link @route="scopes.scope" @model="global">
      {{t "titles.global"}}
    </dropdown.link>
    <dropdown.separator />
    {{#each this.orgScopes as |scope|}}
      <dropdown.link @route="scopes.scope" @model={{scope.id}}>
        {{scope.displayName}}
      </dropdown.link>
    {{/each}}
  {{else}}
    <dropdown.link @route="scopes.scope" @model={{this.model.id}}>
      {{this.model.displayName}}
    </dropdown.link>
  {{/if}}
</Rose::Dropdown>
