{{title @model.displayName}}

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <BreadCrumbs />
  </page.breadcrumbs>

  <page.header>
    <h2>{{t "resources.role"}}</h2>
  </page.header>

  <page.actions>
    <Rose::Dropdown @text="{{t 'form.label.manage'}}" @dropdownRight={{true}} as |dropdown|>
      <dropdown.button
        @style="danger"
        @disabled={{@model.canSave}}
        {{on "click" (route-action "delete" @model)}}
      >
        {{t 'actions.delete-role'}}
      </dropdown.button>
    </Rose::Dropdown>
  </page.actions>

  <page.navigation>
    <Rose::Nav::Tabs as |nav|>
      <nav.link @route='scopes.scope.roles.role.index'>
        {{t 'titles.settings'}}
      </nav.link>
      <nav.link @route='scopes.scope.roles.role.principals'>
        {{t 'titles.principals'}}
      </nav.link>
      <nav.link @route='scopes.scope.roles.role.grants'>
        {{t 'titles.grants'}}
      </nav.link>
    </Rose::Nav::Tabs>
  </page.navigation>

  <page.body>
    {{outlet}}
  </page.body>

</Rose::Layout::Page>
