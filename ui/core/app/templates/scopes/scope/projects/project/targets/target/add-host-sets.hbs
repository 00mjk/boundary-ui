{{title (t 'actions.add-host-sets')}}

{{#if @model.hostSets}}
  <Form::Target::AddHostSets
    @model={{@model.target}}
    @hostCatalogs={{@model.hostCatalogs}}
    @hostSets={{@model.hostSets}}
    @submit={{route-action "save" @model.target}}
    @cancel={{route-action "cancel"}}
  />
{{/if}}

{{#unless @model.hostSets}}
  <Rose::Layout::Centered>
    <Rose::Message @title={{t "titles.no-host-sets-for-target"}} as |message|>
      <message.description>
        {{t "descriptions.no-host-sets-for-target"}}
      </message.description>
    </Rose::Message>
  </Rose::Layout::Centered>
{{/unless}}
