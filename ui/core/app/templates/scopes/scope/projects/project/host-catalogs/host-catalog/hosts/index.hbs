{{#if @model}}

  <Rose::Table as |table|>
    <table.header as |header|>
      <header.row as |row|>
        <row.headerCell>{{t "form.name.label"}}</row.headerCell>
        <row.headerCell>{{t "form.type.label"}}</row.headerCell>
        <row.headerCell>{{t "form.id.label"}}</row.headerCell>
        <row.headerCell>{{t "form.address.label"}}</row.headerCell>
      </header.row>
    </table.header>
    <table.body as |body|>
      {{#each @model as |host|}}
        <body.row as |row|>
          <row.headerCell>
            <LinkTo
              @route="scopes.scope.projects.project.host-catalogs.host-catalog.hosts.host"
              @model={{host.id}}
            >
              {{host.displayName}}
            </LinkTo>
            <p>{{host.description}}</p>
          </row.headerCell>
          <row.cell>
            <Rose::Badge>
              {{t (concat 'resources.host.types.' host.type)}}
            </Rose::Badge>
          </row.cell>
          <row.cell>
            <code>{{host.id}}</code>
          </row.cell>
          <row.cell>
            <code>{{host.attributes.address}}</code>
          </row.cell>
        </body.row>
      {{/each}}
    </table.body>
  </Rose::Table>

{{else}}

  <Rose::Layout::Centered>
    <Rose::Message @title={{t "resources.host.messages.welcome.title"}} as |message|>
      <message.description>
        {{t "resources.host.description"}}
      </message.description>
      <message.link @route="scopes.scope.projects.project.host-catalogs.host-catalog.hosts.new">
        <Rose::Icon @name="plus-circle-outline" />
        {{t "titles.new"}}
      </message.link>
    </Rose::Message>
  </Rose::Layout::Centered>

{{/if}}
