{{#if @model}}

  <Rose::Table as |table|>
    <table.header as |header|>
      <header.row as |row|>
        <row.cell>{{t "form.label.name"}}</row.cell>
        <row.cell>{{t "form.label.type"}}</row.cell>
        <row.cell>{{t "form.label.id"}}</row.cell>
      </header.row>
    </table.header>
    <table.body as |body|>
      {{#each @model as |host|}}
        <body.row as |row|>
          <row.cell>
            <LinkTo
              @route="scopes.scope.projects.project.host-catalogs.host-catalog.hosts.host"
              @model={{host}}
            >
              {{host.displayName}}
            </LinkTo>
            <p>{{host.description}}</p>
          </row.cell>
          <row.cell>
            <Rose::Badge @style="outline">{{host.type}}</Rose::Badge>
          </row.cell>
          <row.cell>
            <code>{{host.id}}</code>
          </row.cell>
        </body.row>
      {{/each}}
    </table.body>
  </Rose::Table>

{{else}}

  <Rose::Layout::Centered>
    <Rose::Message @title={{t "titles.hosts-welcome"}} as |message|>
      <message.description>
        {{t "descriptions.hosts-welcome"}}
      </message.description>
      <message.link @route="scopes.scope.projects.project.host-catalogs.host-catalog.hosts.new">
        <Rose::Icon @name="plus-circle-outline" />
        {{t "titles.new"}}
      </message.link>
    </Rose::Message>
  </Rose::Layout::Centered>

{{/if}}
