{{title @model.name}}

<Rose::Layout::Page class="project-overview" as |page|>
  <page.breadcrumbs>
    <div class="breadcrumbs">
      <LinkTo @route='orgs.org.projects'>{{t "resources.projects"}}</LinkTo>
      >
      <LinkTo @route='orgs.org.projects.project'>{{@model.name}}</LinkTo>
    </div>
  </page.breadcrumbs>

  <page.header>
    <h1>{{t "resources.project.settings"}}</h1>
  </page.header>

  <page.navigation>
    <Rose::Nav::Tabs as |nav|>
      <nav.link @route='orgs.org.projects.project'>
        {{t "nav.overview"}}
      </nav.link>
      <nav.link @route='index'>
        {{t 'dev.item-name'}}
      </nav.link>
    </Rose::Nav::Tabs>
  </page.navigation>

  <page.body>
    <Form::Project
      @model={{@model}}
      @submit={{route-action "save" @model}}
      @cancel={{route-action "cancel" @model}}
      class="project-new-form"
    />

    <Rose::Button
      @style="warning"
      @disabled={{@model.canSave}}
      {{on "click" (route-action "delete" @model)}}
    >
      {{t 'actions.delete'}}
    </Rose::Button>
  </page.body>
</Rose::Layout::Page>
