<div class="project-overview">
  <div class="breadcrumbs">
    <LinkTo @route='orgs.org.projects'>{{t "resources.projects"}}</LinkTo>
    >
    <LinkTo @route='orgs.org.projects.project'>{{@model.name}}</LinkTo>
  </div>

  <h2>{{t "resources.project.settings"}}</h2>

  <Rose::Nav::Tabs as |nav|>
    <nav.link @route='orgs.org.projects.project'>
      {{t 'dev.item-name'}}
    </nav.link>
    <nav.link @route='index'>
      {{t 'dev.item-name'}}
    </nav.link>
  </Rose::Nav::Tabs>

  <Form::Project
    @model={{@model}}
    @submit={{route-action "save" @model}}
    @cancel={{route-action "cancel" @model}}
    class="project-new-form"
  />

  <Rose::Button
    @style="warning"
    @disabled={{@model.canSave}}
    {{on "click" (route-action "delete" @model)}}
  >
    {{t 'actions.delete'}}
  </Rose::Button>
</div>
