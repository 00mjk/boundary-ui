<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <BreadCrumbs />
  </page.breadcrumbs>

  <page.header>
    <h2>{{t "resources.projects"}}</h2>
  </page.header>

  <page.actions>
    <LinkTo @route="orgs.org.projects.new">{{t 'titles.new'}}</LinkTo>
  </page.actions>

  <page.body>

    {{#if @model}}

      <Rose::Cards as |cards|>
        {{#each @model as |project|}}
          <cards.link
            @title={{project.name}}
            @subtitle={{project.id}}
            @description={{project.description}}
            @route="orgs.org.projects.project"
            @model={{project}}
          />
        {{/each}}
      </Rose::Cards>

    {{else}}

      <Rose::Layout::Centered>
        <Rose::Message @title={{t 'titles.empty-set'}} as |message|>
          <message.description>
            {{t 'descriptions.empty-set'}}
          </message.description>
          <message.link @route="orgs.org.projects.new">
            <Rose::Icon @name="plus-circle-outline" />
            {{t 'titles.new'}}
          </message.link>
        </Rose::Message>
      </Rose::Layout::Centered>

    {{/if}}

  </page.body>

</Rose::Layout::Page>
