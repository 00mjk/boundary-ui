<div class="projects-overview">
  <Rose::Layout::PageHeader>
    <Rose::PageHeader::Title @text={{t "resources.projects"}} />
    <Rose::PageHeader::Utilities as |utility|>
      <utility.action
        @style="primary"
        @iconLeft="plus-plain"
        {{on "click" (route-action "new")}}
      >
        {{t 'titles.new'}}
      </utility.action>
    </Rose::PageHeader::Utilities>
  </Rose::Layout::PageHeader>

  <ul class="projects">
    {{#each @model as |project|}}
      <li class="project">
        <Rose::Card::Link @title={{project.name}}
          @subtitle={{project.id}}
          @description={{project.description}}
          @route="orgs.org.projects.project"
          @model={{project}}
        />
      </li>
    {{/each}}
  </ul>
</div>
