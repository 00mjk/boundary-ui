<div class="projects-overview">
  <h2>{{t "resources.projects"}}</h2>
  <Rose::Button
    class="project-new-link"
    @style="primary"
    @iconLeft="plus-plain"
    {{on "click" (route-action "new")}}
  >
    {{t 'titles.new'}}
  </Rose::Button>

  <ul class="projects">
    {{#each @model as |project|}}
      <li class="project">
        <LinkTo @route="orgs.org.projects.project" @model={{project}}>
          {{project.name}}
        </LinkTo>
      </li>
    {{/each}}
  </ul>
</div>
