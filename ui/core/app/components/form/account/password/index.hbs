<Rose::Form
  @onSubmit={{fn this.submit @submit}}
  @cancel={{@cancel}}
  @disabled={{@model.isSaving}}
  @error={{@model.errors.base}}
  as |form|
>
  <form.input
  @value={{t (concat 'account.types.' @model.type)}}
  @label={{t "form.label.type"}}
  readonly={{true}}
  @disabled={{true}} />

  <form.input
    @name="name"
    @type="name"
    @value={{@model.name}}
    @label={{t "form.label.name"}}
    @error={{@model.errors.name}}
    readonly={{false}}
  as |field|>
    {{#if @model.errors.name}}
      <field.errors as |errors|>
        {{#each @model.errors.name as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <form.textarea
    @name="description"
    @type="description"
    @value={{@model.description}}
    @label={{t "form.label.description"}}
    @error={{@model.errors.description}}
    disabled={{@model.isSaving}}
    readonly={{false}}
  as |field|>
    {{#if @model.errors.description}}
      <field.errors as |errors|>
        {{#each @model.errors.description as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.textarea>

  <form.input
    @name="login_name"
    @type="text"
    @value={{@model.attributes.login_name}}
    @label={{t "form.label.identification"}}
    @error={{@model.errors.name}}
    readonly={{false}}
  as |field|>
    {{#if @model.errors.name}}
      <field.errors as |errors|>
        {{#each @model.errors.name as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  {{#if @allowPassword}}
    <form.input
      @name="password"
      @type="password"
      @value={{this.password}}
      @label={{t "form.label.password"}}
      @error={{@model.errors.name}}
      readonly={{false}}
      autocomplete="new-password"
    as |field|>
      {{#if @model.errors.name}}
        <field.errors as |errors|>
          {{#each @model.errors.name as |error|}}
            <errors.message>{{error.message}}</errors.message>
          {{/each}}
        </field.errors>
      {{/if}}
    </form.input>
  {{/if}}

  <form.actions
    @disabled={{if @model.cannotSave @model.cannotSave}}
    @submitText={{t "actions.save"}}
    @cancelText={{t "actions.cancel"}} />
</Rose::Form>