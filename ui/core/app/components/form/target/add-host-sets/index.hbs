<Rose::Form
  class="full-width"
  @onSubmit={{fn this.submit @submit}}
  @cancel={{@cancel}}
  @disabled={{@model.isSaving}}
  @error={{@model.errors.base}}
  as |form|
>

  <form.actions
    @submitText={{t "actions.add-host-sets"}}
    @cancelText={{t "actions.cancel"}} />

  <Rose::Table as |table|>
    <table.header as |header|>
      <header.row as |row|>
        <row.headerCell>{{t 'form.label.id'}}</row.headerCell>
        <row.headerCell>{{t 'form.label.name'}}</row.headerCell>
        <row.headerCell>{{t 'form.label.type'}}</row.headerCell>
        <row.headerCell>{{t 'resources.host-catalog'}}</row.headerCell>
      </header.row>
    </table.header>
    <table.body as |body|>
      {{#each this.hostSetGroups as |hostSetGroup|}}
        {{#each hostSetGroup.hostSets as |hostSet|}}
          <body.row as |row|>
            <row.cell>
              <form.checkbox
                @label={{hostSet.id}}
                @description={{hostSet.description}}
                onChange={{fn this.toggleHostSet hostSet}} />
            </row.cell>
            <row.cell>{{hostSet.name}}</row.cell>
            <row.cell>
              <Rose::Badge @style="outline">{{hostSet.type}}</Rose::Badge>
            </row.cell>
            <row.cell>
              <code>{{hostSetGroup.hostCatalog.id}}</code>
            </row.cell>
          </body.row>
        {{/each}}
      {{/each}}
    </table.body>
  </Rose::Table>

</Rose::Form>
