<Rose::Message @title={{t this.title}} @subtitle={{t this.subtitle}} @icon={{this.icon}} as |message|>
  <message.description>{{t this.description}}</message.description>
  {{#if this.helpRoute}}
    <message.link @route={{this.helpRoute}}>{{t "actions.help"}}</message.link>
  {{/if}}
</Rose::Message>