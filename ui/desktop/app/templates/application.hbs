{{page-title (app-name)}}

<Rose::Layout::Global as |layout|>

  <layout.header>
    <Rose::Header class="{{if (is-loading) " loading"}}" as |header|>
      <header.brand @logo="logo-app" @text={{app-name}} />

      <header.nav>
        {{outlet "header-nav"}}
      </header.nav>
    </Rose::Header>
  </layout.header>

  <layout.body>
    {{outlet}}
  </layout.body>

</Rose::Layout::Global>
