<section class='card'>
  <header class='card-header'>
    {{#if @heading}}
      <h2>
        {{#if @icon}}
          <Rose::Icon @name={{@icon}} @size='medium' />
        {{/if}}
        {{@heading}}
      </h2>
    {{/if}}
    {{yield to='header'}}
  </header>
  <div class='card-body'>{{yield to='body'}}</div>
  <footer class='card-footer'>{{yield to='footer'}}</footer>
</section>